<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.felipebz</groupId>
    <artifactId>jlinktest</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <name>jlinktest</name>
    <url>https://github.com/felipebz/jreleaser-jlink-jep493</url>

    <properties>
        <app.main.class>com.felipebz.jlinktest.HelloWorld</app.main.class>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>25</java.version>
        <jdk.version>25</jdk.version>
    </properties>

    <licenses>
        <license>
            <name>Apache-2.0</name>
            <url>https://spdx.org/licenses/Apache-2.0.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.14.1</version>
                <configuration>
                    <release>${java.version}</release>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.4.2</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>${app.main.class}</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.jreleaser</groupId>
                <artifactId>jdks-maven-plugin</artifactId>
                <version>1.20.0</version>
                <executions>
                    <execution>
                        <id>setup-jdks</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>setup-disco</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <pkgs>
                        <pkg>
                            <name>linux</name>
                            <platform>linux-x86_64</platform>
                            <version>${jdk.version}</version>
                            <distribution>temurin</distribution>
                            <archiveType>tar.gz</archiveType>
                        </pkg>
                        <pkg>
                            <name>windows</name>
                            <platform>windows-x86_64</platform>
                            <version>${jdk.version}</version>
                            <distribution>temurin</distribution>
                        </pkg>
                    </pkgs>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.jreleaser</groupId>
                <artifactId>jreleaser-maven-plugin</artifactId>
                <version>1.20.0</version>
                <executions>
                    <execution>
                        <id>jreleaser-assemble</id>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jreleaser>
                        <assemble>
                            <jlink>
                                <jlinktest>
                                    <active>ALWAYS</active>
                                    <imageName>{{distributionName}}</imageName>
                                    <targetJdks>
                                        <targetJdk>
                                            <path>target/jdks/linux/jdk-25+36</path>
                                            <platform>linux-x86_64</platform>
                                        </targetJdk>
                                        <targetJdk>
                                            <path>target/jdks/windows/jdk-25+36</path>
                                            <platform>windows-x86_64</platform>
                                        </targetJdk>
                                    </targetJdks>
                                    <mainJar>
                                        <path>target/{{distributionName}}-{{projectVersion}}.jar</path>
                                    </mainJar>
                                </jlinktest>
                            </jlink>
                        </assemble>
                    </jreleaser>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
